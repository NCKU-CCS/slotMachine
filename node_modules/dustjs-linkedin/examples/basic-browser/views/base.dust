<!doctype html>
<html>
  <head>
    <title>Company name</title>
    <style>
    .alert:empty {
      display: none;
    }
    </style>
  </head>
  <body>
    <div class="wrapper">
    <div id="content">
    <div class="container">

    <h1>{headline}</h1>
    <div class="alert alert-success">{+success}default success{/success}</div>
    <div class="alert alert-info">{+info}default info{/info}</div>
    <div class="alert alert-warning">{+warning/}</div>
    <div class="alert alert-danger">{+danger/}</div>

    {+content/}
    </div>
    </div>
    </div>

  </body>
</html>
