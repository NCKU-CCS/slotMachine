#!/usr/bin/env node

var Q  = require('q');
var _ = require('lodash');
var path = require('path');
var prog = require('commander');

var pkg = require('../package.json');

var serve = require('../lib/serve');

prog
.version(pkg.version);

prog
.usage('[options] <the directory you are willing to served, default to current directory>')
.option('-p, --port <port>', 'Port for server to listen on', 4000)
    
var dir = path.join(process.cwd(), prog.parse(process.argv).args[0]) || process.cwd();

serve.serveDir(dir, prog.port)
    .then(function() {
        console.log('Serving ' + dir + ' on http://localhost:'+ prog.port);
        console.log();
        console.log('Press CTRL+C to quit ...');
    }).fail(serve.logError);
