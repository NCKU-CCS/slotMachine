#!/usr/bin/env node
var path = require('path');
var util = require('util');
var fs = require('fs');
var argv = require('optimist')
	.usage('Usage: $input-html -o [output-html]')
	.default('o', 'output.html')
	.demand(['o'])
  .argv;
var md_attr = require('../');


md_attr(path.join(process.cwd(), argv._[0]), function(html) {
    fs.writeFileSync(path.join(process.cwd(), argv.o), html);
});